# Aristay Environment Configuration Example
# Copy this file to .env and modify the values as needed
# Set DJANGO_ENVIRONMENT to control which settings are loaded
# Options: development, testing, production

# ============================================================================
# ENVIRONMENT SELECTION
# ============================================================================
DJANGO_ENVIRONMENT=development

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================
SECRET_KEY=your-secret-key-here-change-this
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL REQUIRED)
# ============================================================================
# IMPORTANT: This project ONLY supports PostgreSQL. SQLite is NOT supported.
# Default local development setup (assumes default PostgreSQL installation):
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aristay_local

# For custom PostgreSQL setup, use this format:
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Before running migrations, ensure you have:
# 1. Installed PostgreSQL (version 12 or higher)
# 2. Created the database: CREATE DATABASE aristay_local;
# 3. Created the user: CREATE USER postgres WITH PASSWORD 'postgres';
# 4. Granted privileges: GRANT ALL PRIVILEGES ON DATABASE aristay_local TO postgres;

# ============================================================================
# CORS / FRONTEND CONFIGURATION
# ============================================================================
CORS_ALLOW_ALL_ORIGINS=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# For production (real email sending):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.mailersend.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@aristay-internal.cloud

# For development (console output):
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=false
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ============================================================================
# FILE STORAGE & CLOUDINARY (OPTIONAL)
# ============================================================================
# Set to false for local development (uses local file system)
USE_CLOUDINARY=false
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# For production with Cloudinary:
# USE_CLOUDINARY=true
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SIGNING_KEY=your-jwt-signing-key-change-this

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================
# Sentry for error tracking (production)
SENTRY_DSN=

# Redis for caching and WebSocket support (optional)
# REDIS_URL=redis://localhost:6379/0

# Firebase Cloud Messaging for push notifications (optional)
FCM_SERVER_KEY=
