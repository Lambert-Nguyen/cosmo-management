# Cosmo Management Environment Configuration
# Copy this file to cosmo_backend/.env and customize

# ============================================================================
# IMPORTANT: PostgreSQL is REQUIRED
# ============================================================================
# This project does NOT support SQLite. You must have PostgreSQL installed.
# See README.md for PostgreSQL installation instructions.

# Django Core
SECRET_KEY=replace-me-with-secure-random-string
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL ONLY)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cosmo_db

# JWT Authentication
JWT_SIGNING_KEY=replace-me-with-secure-jwt-key

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=replace-me
EMAIL_HOST_PASSWORD=replace-me
DEFAULT_FROM_EMAIL=noreply@example.com

# File Storage
USE_CLOUDINARY=false
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Optional Services
SENTRY_DSN=
REDIS_URL=
FCM_SERVER_KEY=
