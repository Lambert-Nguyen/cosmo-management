# Production Environment Configuration for AriStay Backend
# Copy this file to .env and update with your production values

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================
DJANGO_ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production
APP_VERSION=1.0.0

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL REQUIRED)
# ============================================================================
# IMPORTANT: This project ONLY supports PostgreSQL. SQLite is NOT supported.
# Production PostgreSQL configuration:
DATABASE_URL=postgresql://username:password@localhost:5432/aristay_prod
DB_MAX_CONNECTIONS=20

# Before deploying to production, ensure you have:
# 1. Installed PostgreSQL (version 12 or higher)
# 2. Created the production database: CREATE DATABASE aristay_prod;
# 3. Created a secure database user with a strong password
# 4. Granted appropriate privileges
# 5. Configured PostgreSQL for production (pg_hba.conf, postgresql.conf)

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Domains allowed to access your Django app
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# CORS settings - comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# HTTPS settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Admin notifications
DJANGO_ADMINS=Admin Name:admin@your-domain.com,Tech Lead:tech@your-domain.com

# ============================================================================
# SENTRY ERROR TRACKING
# ============================================================================
# Get this from your Sentry project settings
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# PERFORMANCE MONITORING
# ============================================================================
# Thresholds for performance alerts (in milliseconds)
SLOW_REQUEST_THRESHOLD=1000
SLOW_QUERY_THRESHOLD=100

# ============================================================================
# REDIS CACHE CONFIGURATION
# ============================================================================
REDIS_URL=redis://username:password@redis-server:6379/1
REDIS_MAX_CONNECTIONS=50
CACHE_TIMEOUT=300

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SMTP settings for error notifications and digests
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=AriStay <noreply@your-domain.com>

# Email digest settings
EMAIL_DIGEST_ENABLED=True
EMAIL_DIGEST_HOUR_UTC=12

# ============================================================================
# FIREBASE PUSH NOTIFICATIONS
# ============================================================================
# Path to your Firebase service account JSON file
FIREBASE_CREDENTIALS_FILE=/path/to/firebase-credentials.json

# ============================================================================
# STATIC FILES & MEDIA
# ============================================================================
# For production, use cloud storage like AWS S3
STATIC_URL=/static/
STATIC_ROOT=/var/www/aristay/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/aristay/media/

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================
# Number of worker processes for WSGI server
WEB_CONCURRENCY=4
WEB_TIMEOUT=30

# ============================================================================
# MONITORING & HEALTH CHECKS
# ============================================================================
# External monitoring service URLs (optional)
HEALTH_CHECK_TOKEN=your-health-check-token
MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook
